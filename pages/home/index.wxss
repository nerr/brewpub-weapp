.index-hd {
  padding: 70rpx;
  text-align: center;
}
.index-bd {
  padding: 20rpx 30rpx;
  background-color:#fff;
  color: #333;
  text-align: center;
}
.index-ft {
  padding-bottom: 20rpx;
  text-align: center;
}
.index-logo {
  width: 237rpx;
  height: 83rpx;
}
.index-desc {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}

.provider {
  position: fixed;
  width: 100%;
  bottom: 120rpx;
  color: #a9a9a9;
  text-align: center;
}

.content {
    padding: 30rpx;
}

.wrap {
    display: block;
    height: 60rpx;
    background: #fff;
}
.listitem {
    font-size: 24rpx;
    line-height: 60rpx;
    text-align: center;
}
.taplist {
    margin: 0px 10px 10px 10px;
}
.tapcode {
    width: 15%;
    font-size: 50rpx;
    flex-grow: 0;
}
.tapinfo_main_r0 {
    flex-grow: 1;
    text-align: left;
    font-size: 34rpx;
    vertical-align:100%;
    margin : 10rpx 0rpx 0rpx 0rpx;
}
.tapinfo_sub_r0 {
    flex-grow: 1;
    text-align: right;
    font-size: 28rpx;
    margin : 15rpx 20rpx 0rpx 0rpx;
}
.tapinfo_main_r1 {
    flex-grow: 1;
    text-align: left;
    margin : 0rpx 10rpx 0rpx 0rpx;
}
.tapinfo_sub_r1 {
    flex-grow: 1;
    text-align: right;
    font-size: 28rpx;
    font-weight: bold;
    margin : 0rpx 20rpx 0rpx 0rpx;
}
.tapinfo_tag {
    flex-grow: 1;
    text-align: left;
    border-style: solid none none none;
    border-width: 1rpx;
    border-color: #f5f5f5;
    color:#a9a9a9;
    margin : 0rpx 20rpx 0rpx 0rpx;
}
